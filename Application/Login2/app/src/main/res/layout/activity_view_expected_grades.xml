<?xml version="1.0" encoding="utf-8"?>
<ScrollView class="androidx.appcompat.app.AlertController$RecycleListView" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".UI.ViewExpectedGrades">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expGPA"
        android:padding="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:text="Enter expected GPA:"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expValue"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter"
        android:layout_below="@+id/expValue"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="Enter"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:layout_below="@id/enter"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="REQUIRED GRADES"
        android:textAlignment="center"

        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lview"
        android:layout_below="@+id/top"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
    />

    </RelativeLayout>






</ScrollView>